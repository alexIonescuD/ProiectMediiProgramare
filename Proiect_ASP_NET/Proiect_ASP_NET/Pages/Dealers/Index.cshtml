@page "{id:int?}"

@model Proiect_ASP_NET.Pages.Dealers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    @if (Model.DealerData.Cars != null)
    {
        <h3>Cars Owned by Selected Dealer</h3>
        <table class="table">

            @foreach (var item in Model.DealerData.Dealers)
            {
                string selectedRow = "";
                if (item.ID == Model.DealerID)
                {
                    selectedRow = "table-success";
                }
                <tr class="@selectedRow">

                    <td>
                        @{
                            foreach (var b in item.Cars)
                            {

                                @b.Brand.Name @: @b.Model

                                <br />
                            }
                        }
                    </td>
                </tr>
            }
        </table>
    } 
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dealer[0].DealerName)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model.DealerData.Dealers)
        {
            string selectedRow = "";
            if (item.ID == Model.DealerID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.DealerName)
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td> <br>
        </tr>
}

    </tbody>
</table>
