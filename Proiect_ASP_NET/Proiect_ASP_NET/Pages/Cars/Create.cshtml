@page
@model Proiect_ASP_NET.Pages.Cars.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Car.BrandID" class="control-label">Brand Name</label>
                <select asp-for="Car.BrandID" class="form-control" asp-items="ViewBag.BrandID">
                </select>
                <span asp-validation-for="Car.BrandID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Model" class="control-label"></label>
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CategoryID" class="control-label">Category</label>
                <select asp-for="Car.CategoryID" class="form-control" asp-items="ViewBag.CategoryID">
                </select>
                <span asp-validation-for="Car.CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Price" class="control-label"></label>
                <input asp-for="Car.Price" class="form-control" />
                <span asp-validation-for="Car.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.FabricationDate" class="control-label"></label>
                <input asp-for="Car.FabricationDate" class="form-control" />
                <span asp-validation-for="Car.FabricationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.DealerID" class="control-label">Dealer Name</label>
                <select asp-for="Car.DealerID" class="form-control" asp-items="ViewBag.DealerID">
                </select>
                <span asp-validation-for="Car.DealerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

