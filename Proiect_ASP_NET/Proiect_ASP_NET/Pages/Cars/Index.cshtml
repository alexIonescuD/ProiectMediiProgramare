@page "/"
@model Proiect_ASP_NET.Pages.Cars.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Car Brand, Model, Category or by Dealer Name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.BrandSort">
                @Html.DisplayNameFor(model => model.Car[0].Brand.Name)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.ModelSort">
                @Html.DisplayNameFor(model => model.Car[0].Model)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].FabricationDate)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.ModelSort">
                @Html.DisplayNameFor(model => model.Car[0].Dealer.DealerName)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Car) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FabricationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dealer.DealerName)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
